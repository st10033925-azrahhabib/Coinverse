<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

<androidx.cardview.widget.CardView
android:id="@+id/cardContainer"
android:layout_width="match_parent"
android:layout_height="wrap_content"
card_view:cardCornerRadius="24dp"
card_view:cardElevation="8dp"
android:layout_marginTop="50dp"
android:layout_marginHorizontal="24dp"
android:padding="24dp"
android:background="@android:color/white">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="18dp">

    <TextView
        android:text="Add Category"
        android:textSize="20sp"
        android:fontFamily="@font/poppinsbold"
        android:textStyle="bold"
        android:textColor="#7A63AC"
        android:layout_height="wrap_content" android:layout_width="300dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/categoryNameEditText"
        android:hint="Category name"
        android:fontFamily="@font/poppinsregular"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Select an icon"
        android:fontFamily="@font/poppinsregular"
        android:textSize="16dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#777" />

    <GridLayout
        android:id="@+id/iconGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:columnCount="5"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="16sp"
            android:fontFamily="@font/poppinsregular"
            android:backgroundTint="#7A63AC"
            android:layout_height="45dp"/>

        <Space android:layout_width="20dp" android:layout_height="wrap_content" />

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Confirm"
            android:fontFamily="@font/poppinsregular"
            android:textSize="16sp"
            android:backgroundTint="#7A63AC" />
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- nav bar -->
    <include
        android:id="@+id/customBottomBar"
        layout="@layout/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
