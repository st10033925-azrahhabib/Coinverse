<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="#F8F8F8"
    tools:context=".WeekSelectorFragment">


    <ImageView
        android:id="@+id/ivPreviousWeekFragment"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_left"
        android:contentDescription="@string/cd_previous_week"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless" />


    <TextView
        android:id="@+id/tvWeekLabelFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:text="Week 1"
        android:textColor="#5C40B1"
        android:textSize="16sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/ivNextWeekFragment"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_right"
        android:contentDescription="@string/cd_next_week"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless" />

</LinearLayout>
