<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <!-- Header -->
    <View
        android:id="@+id/purple_header_insights"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#7A63AC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Month Fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/purple_header_insights"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_month" />

    <!-- Week Selector Fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/weekSelectorFragmentContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragmentContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_month" />

    <!-- Budget Goals Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBudgetGoals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        app:cardBackgroundColor="#F9F6FC"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/weekSelectorFragmentContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title Row -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewBudgetGoalsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Budget Goals"
                    android:textColor="#7A63AC"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivAddGoal"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/cd_add_budget_goal"
                    android:src="@drawable/ic_add_button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#7A63AC" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:background="#DDD" />

            <!-- Budget Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="Budget Total:"
                    android:textColor="#9A9A9A"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/budgetTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="R 2000"
                    android:textColor="#9A9A9A"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Another Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:background="#DDD" />

            <!-- Category Items -->
            <include layout="@layout/budget_category_item" android:id="@+id/itemFood" />
            <include layout="@layout/budget_category_item" android:id="@+id/itemGroceries" />
            <include layout="@layout/budget_category_item" android:id="@+id/itemClothing" />
            <include layout="@layout/budget_category_item" android:id="@+id/itemTravel" />
            <include layout="@layout/budget_category_item" android:id="@+id/itemGifting" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Amount Available Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAmountAvailable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#F9F6FC"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardBudgetGoals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount available"
                android:textColor="#7A63AC"
                android:textSize="20sp"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/amountAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R1000"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="20sp"
                android:textColor="#9A9A9A" />

            <SeekBar
                android:id="@+id/seekBarAmountAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:max="2000"
                android:progress="1000"
                android:progressDrawable="@drawable/custom_seekbar_progress"
                android:thumb="@null"
                android:enabled="false"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:splitTrack="false" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/ivHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home"
            android:background="@android:color/transparent"
            android:padding="12dp" />

        <ImageButton
            android:id="@+id/ivInsights"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/insights"
            android:contentDescription="Insights"
            android:background="@android:color/transparent"
            android:padding="12dp" />

        <ImageButton
            android:id="@+id/ivAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_add_button"
            android:contentDescription="Add"
            android:background="@android:color/transparent"
            android:padding="12dp" />

        <ImageButton
            android:id="@+id/ivGoals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/goals"
            android:contentDescription="Goals"
            android:background="@android:color/transparent"
            android:padding="12dp" />

        <ImageButton
            android:id="@+id/ivProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/profile"
            android:contentDescription="Profile"
            android:background="@android:color/transparent"
            android:padding="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
