<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- header -->
        <include
            android:id="@+id/topAppBar"
            layout="@layout/layout_header" />

        <!-- month tab -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_month" />

        <!-- daily spending card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDailySpending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly Spending"
                    android:textColor="#7A63AC"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_gravity="center_horizontal" />

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp"
                    android:background="#DDD" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <!-- col 1 -->
                    <TextView
                        android:id="@+id/tvTotalExpensesValue1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-3600"
                        android:textColor="#888888"
                        android:textSize="22sp"
                        android:paddingEnd="8dp"
                        android:fontFamily="@font/poppinsregular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvTotalExpensesValue2" />

                    <TextView
                        android:id="@+id/tvTotalExpensesLabel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Spend"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppinsregular"
                        app:layout_constraintTop_toBottomOf="@id/tvTotalExpensesValue1"
                        app:layout_constraintStart_toStartOf="@id/tvTotalExpensesValue1"
                        app:layout_constraintEnd_toEndOf="@id/tvTotalExpensesValue1" />

                    <!-- col 2 -->
                    <TextView
                        android:id="@+id/tvTotalExpensesValue2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4600"
                        android:textColor="#888888"
                        android:textSize="22sp"
                        android:fontFamily="@font/poppinsregular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvTotalExpensesValue1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/tvTotalExpensesLabel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Budgeted"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppinsregular"
                        app:layout_constraintTop_toBottomOf="@id/tvTotalExpensesValue2"
                        app:layout_constraintStart_toStartOf="@id/tvTotalExpensesValue2"
                        app:layout_constraintEnd_toEndOf="@id/tvTotalExpensesValue2" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="14dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0dp"
                    android:background="#DDD" />

                <FrameLayout
                    android:id="@+id/chartContainer"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/card_background">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="match_parent"
                        android:layout_height="214dp"
                        android:layout_margin="14dp"
                        android:layout_gravity="center" />
                </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- average expenses card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAverageExpenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="25dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Average Expenses"
                    android:textColor="#7A63AC"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppinssemibold"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/tvAverageExpensesValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-670"
                    android:textColor="#888888"
                    android:paddingEnd="8dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppinsregular"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <!-- nav bar -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="@color/card_background"
            android:gravity="center">

            <ImageButton
                android:id="@+id/ivHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/home"
                android:contentDescription="Home"
                android:background="@android:color/transparent"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/ivInsights"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/insights_selected"
                android:contentDescription="Insights"
                android:background="@android:color/transparent"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/ivAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/add_button"
                android:contentDescription="Add"
                android:background="@android:color/transparent"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/ivGoals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/goal"
                android:contentDescription="Goals"
                android:background="@android:color/transparent"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/ivProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/profile"
                android:contentDescription="Profile"
                android:background="@android:color/transparent"
                android:padding="12dp" />
        </LinearLayout>
</FrameLayout>
